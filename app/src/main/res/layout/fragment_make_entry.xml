<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:background="#F2F2F2"
        android:layout_height="fill_parent"
        android:id="@+id/main">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:id="@+id/postsection"
            android:layout_height="fill_parent"
            android:orientation="vertical">
            <FrameLayout android:id="@+id/main_view"
                android:layout_width="fill_parent"
                android:layout_height="240dp"
                android:layout_centerHorizontal="true"
                android:background="#F2F2F2" />
            <SeekBar android:id="@+id/seek"
                android:layout_height="wrap_content"
                android:layout_width="250dp"
                android:layout_centerHorizontal="true"
                android:thumb="@drawable/slider_thumb"
                android:progressDrawable="@drawable/slider_bg"
                android:layout_below="@id/main_view"
                android:max="100"
                android:progress="50"/>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/friendandlocation"
                android:layout_below="@+id/seek"
                android:layout_marginTop="5dp"
                android:layout_width="fill_parent"
                android:weightSum="53"
                android:layout_height="wrap_content">
                <!--<Button
                    android:id="@+id/add"
                    android:background="@drawable/addfriend"
                    android:textColor="#ffffff"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/added_friend"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="15sp"
                    android:visibility="gone"/>-->
                <Button
                    android:id="@+id/location"
                    android:background="@drawable/locationoff"
                    android:textColor="#ffffff"
                    android:layout_width="fill_parent"
                    android:layout_weight="23"
                    android:layout_marginTop="5dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="10dp"/>
                <EditText
                    android:id="@+id/text"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/friendandlocation"
                    android:layout_marginTop="5dp"
                    android:layout_width="fill_parent"
                    android:layout_weight="10"
                    android:layout_marginLeft="0dp"
                    android:lines="1"
                    android:background="@android:drawable/editbox_background"/>
                <Button
                    android:id="@+id/post"
                    android:background="@drawable/appbutton"
                    android:layout_below="@id/friendandlocation"
                    android:textColor="#ffffff"
                    android:layout_toRightOf="@id/text"
                    android:layout_marginTop="5dp"
                    android:layout_width="fill_parent"
                    android:layout_weight="20"
                    android:layout_height="32dp"
                    android:layout_marginRight="5dp"
                    android:text="Post"/>
                <!--<ProgressBar
                    android:id="@+id/locationprogress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    style="?android:attr/android:progressBarStyleSmall" />-->
            </LinearLayout>
            <Button
                android:id="@+id/addImage"
                android:background="@drawable/appbutton"
                android:layout_below="@id/friendandlocation"
                android:textColor="#ffffff"
                android:layout_marginTop="20dp"
                android:visibility="gone"
                android:layout_marginLeft="10dp"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Add Photo"/>

            <LinearLayout
                android:id="@+id/imageLayout"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/friendandlocation">
                <ImageView
                    android:id="@+id/photo_image"
                    android:layout_below="@id/friendandlocation"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="5dp"
                    android:contentDescription="will vary; image taken from camera"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_launcher" />
                <Button
                    android:id="@+id/removeImage"
                    android:background="@drawable/appbutton"
                    android:layout_below="@id/friendandlocation"
                    android:textColor="#ffffff"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="Remove Photo"/>
                <Button
                    android:id="@+id/changeImage"
                    android:background="@drawable/appbutton"
                    android:layout_below="@id/friendandlocation"
                    android:textColor="#ffffff"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="Change Photo"/>
                </LinearLayout>

            <!--<EditText
                android:id="@+id/text"
                android:layout_height="wrap_content"
                android:layout_below="@id/friendandlocation"
                android:layout_marginTop="5dp"
                android:layout_width="250dp"
                android:layout_marginLeft="0dp"
                android:lines="1"
                android:background="@android:drawable/editbox_background"/>
            <Button
                android:id="@+id/post"
                android:background="@drawable/appbutton"
                android:layout_below="@id/friendandlocation"
                android:textColor="#ffffff"
                android:layout_toRightOf="@id/text"
                android:layout_marginTop="7dp"
                android:layout_width="70dp"
                android:layout_height="32dp"
                android:text="Post"/>-->
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
